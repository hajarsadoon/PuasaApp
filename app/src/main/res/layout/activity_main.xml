<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#43586B"
        android:elevation="4dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:title="Jom Puasa"
        style="@style/Widget.MaterialComponents.Toolbar" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:fontFamily="@font/rubicmonoonereg"
                android:text="Jom "
                android:layout_marginLeft="40sp"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                 />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubicmonoonereg"
                android:text="PUASA"
                android:layout_marginVertical="155sp"
                android:layout_marginLeft="40sp"
                android:textColor="#FFFEFE"
                android:textSize="40sp"
               />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="175dp"
                android:fontFamily="@font/rubicmonoonereg"
                android:text="2024/1445H"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_klik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="36dp"
                android:backgroundTint="#039BE5"
                android:fontFamily="@font/robotoblack"
                android:minHeight="48dp"
                android:text="Klik untuk mula"
                android:textColor="@color/penRoyalBlue" />


        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:background="#ffffff"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_main" >

    </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
